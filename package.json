{
  "name": "hubot-playbook",
  "version": "0.0.0",
  "description": "Conversation branching library for Hubots.",
  "main": "index.coffee",
  "engines": {
    "node": "^4.4.x"
  },
  "scripts": {
    "clean:coverage": "rm -r ./coverage/ && mkdir coverage",
    "clean:docs": "rm -r ./docs/ && mkdir docs",
    "lint": "coffeelint ./src ./test",
    "lint:dev": "coffeelint ./src ./test -q",
    "unit": "mocha",
    "unit:dev": "mocha --reporter progress --debug --bail",
    "unit:docs": "mocha --reporter mochawesome",
    "coverage": "istanbul report",
    "coverage:summary": "istanbul report text-summary",
    "coverage:docs": "istanbul report html --dir ./docs/coverage",
    "coverage:compile": "istanbul report lcov text",
    "coverage:publish": "cat coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test": "run-s -s clean:coverage lint unit coverage",
    "dev": "run-s -s lint:dev unit:dev coverage:summary",
    "watch": "onchange 'src/**/*.coffee' 'test/**/*.coffee' -i -- npm run dev",
    "docs": "run-s -s clean:docs unit:docs coverage:docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timkinnane/hubot-playbook.git"
  },
  "keywords": [
    "hubot",
    "chatbot",
    "slack",
    "rocketchat",
    "messenger",
    "conversation",
    "dialogue"
  ],
  "author": "Tim Kinnane <tim@nestedcode.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/timkinnane/hubot-playbook/issues"
  },
  "homepage": "https://github.com/timkinnane/hubot-playbook#readme",
  "dependencies": {
    "bluebird": "^3.5.0",
    "coffee-script": "^1.12.4",
    "conditioner-regex": "0.1.2",
    "dotenv": "^4.0.0",
    "handlebars": "^4.0.5",
    "handlebars-intl": "^1.1.2",
    "hooker": "^0.2.3",
    "lodash": "^4.17.4",
    "slug": "^0.9.1",
    "yamljs": "^0.2.8"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-subset": "^1.5.0",
    "co": "^4.6.0",
    "coffee-coverage": "^2.0.1",
    "coffeelint": "^1.16.0",
    "coveralls": "^2.11.16",
    "hubot": "^2.19.0",
    "hubot-pretend": "^0.5.1",
    "hubot-test-helper": "^1.5.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.3.0",
    "mocha-clean": "^1.0.0",
    "npm-run-all": "^4.0.2",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0"
  }
}
